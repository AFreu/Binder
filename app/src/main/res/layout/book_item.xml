<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_item"
    android:layout_width="120dp"
    android:layout_height="160dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/book_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_book"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/book_item_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/book_item_image"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/book_item_image"
        android:layout_gravity="bottom"
        android:background="@color/colorSemiBlack"
        android:text="@string/button_learn_more"
        android:textColor="@color/white"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>


</RelativeLayout>
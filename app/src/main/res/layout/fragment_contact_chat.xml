<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilecomputing.binder.Fragments.ContactChatFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider"
        app:inputHint="@string/hint_enter_a_message"/>

    <View
        android:id="@+id/divider"
        android:layout_above="@+id/input"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/warm_grey"/>

    <com.stfalcon.chatkit.messages.MessageInput
        android:background="@color/white"
        android:id="@+id/input"
        app:showAttachmentButton="true"
        app:attachmentButtonDefaultIconColor="@color/blue"
        app:attachmentButtonDefaultIconPressedColor="@color/cornflower_blue_two_dark"
        app:inputTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

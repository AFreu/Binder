<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="TitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleStyleLight" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryHeaderStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">34dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookCardTitleStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorCardTextPrimary</item>
        <item name="android:textSize">24dip</item>
    </style>

    <style name="BookCardAuthorStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorCardTextSecondary</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="BookBottomSheetAuthorStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="PrimaryTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SecondaryTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSemiBlack</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ButtonTextStylePurple" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="GenreTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dip</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="BookGridStyle"  >
        <item name="android:clickable">true</item>
        <item name="android:columnWidth">@dimen/book_image_size</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:focusable">true</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:numColumns">3</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/grid_spacing</item>
        <item name="android:horizontalSpacing">@dimen/grid_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>


</resources>
